    modal.style.display = "block";
  }

  // When the user clicks the confirm button, handle subscription
  confirmBtn.onclick = function() {
    // Add logic to handle the subscription here
    var email = document.getElementById("subscriptionEmail").value;
    // Example: postEmailToServer(email); // Implement your own function to handle the email submission
    modal.style.display = "none";
  };

  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
    modal.style.display = "none";
  }

  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
});


